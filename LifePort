    <script>
        // Simulation Logic Variables
        const initialMoneyLife = 78;
        const maxLife = 100;
        
        function startProcess() {
            // Screen Switch
            document.getElementById('screen-intro').style.display = 'none';
            document.getElementById('screen-loading').style.display = 'flex';

            // Fake Loading Sequence
            simulateConnectionStep(1, "ì€í–‰ ë°ì´í„° ê°€ì ¸ì˜¤ëŠ” ì¤‘...", 800);
            simulateConnectionStep(2, "ì¹´ë“œ ì†Œë¹„ë‚´ì—­ ë¶„ë¥˜ ì¤‘...", 1800);
            simulateConnectionStep(3, "ë¯¸ë˜ ì˜ë£Œë¹„ ê³„ì‚° ì¤‘...", 2800);
            simulateConnectionStep(4, "ê²°ê³¼ ë¶„ì„ ì™„ë£Œ!", 3800);

            // Go to Result
            setTimeout(() => {
                document.getElementById('screen-loading').style.display = 'none';
                document.getElementById('screen-result').style.display = 'block';
                
                // Animation trigger
                setTimeout(() => {
                    updateGraph(initialMoneyLife);
                }, 300);
            }, 4500);
        }

        function simulateConnectionStep(stepNum, text, time) {
            setTimeout(() => {
                document.getElementById('load-msg').innerText = text;
                const item = document.getElementById('step' + stepNum);
                item.classList.add('active');
                item.classList.add('done');
            }, time);
        }

        function updateSimulation(val) {
            const savingAmount = parseInt(val);
            document.getElementById('save-display-text').innerText = "-" + savingAmount + "ë§Œì›";
            document.getElementById('advice-amount').innerText = (savingAmount + 15) + "ë§Œì›"; // Dynamic text

            // Simple Logic: 5ë§Œì› ì•„ë‚„ë•Œë§ˆë‹¤ 1ë…„ ìˆ˜ëª… ì—°ì¥ (ê°€ì •)
            // 0ë§Œì› -> 78ì„¸
            // 100ë§Œì› -> 98ì„¸ (ìµœëŒ€)
            let extendedYears = Math.floor(savingAmount / 5); 
            let newLife = initialMoneyLife + extendedYears;
            
            if(newLife > 100) newLife = 100;

            updateGraph(newLife);
            
            // Text Update
            document.getElementById('advice-year').innerText = (3 + Math.floor(savingAmount/10)) + "ë…„";
        }

        function updateGraph(age) {
            const bar = document.getElementById('money-bar');
            const text = document.getElementById('money-age-text');
            
            bar.style.width = age + "%";
            text.innerText = age + "ì„¸";
            
            // Change Color if safe
            if(age >= 95) {
                bar.style.background = "var(--green)";
                text.style.color = "var(--green)";
                document.getElementById('money-tooltip').innerText = "ì•ˆì „";
                document.getElementById('money-tooltip').style.background = "var(--green)";
            } else {
                bar.style.background = "var(--red)";
                text.style.color = "var(--red)";
                document.getElementById('money-tooltip').innerText = "íŒŒì‚°";
                document.getElementById('money-tooltip').style.background = "var(--primary)";
            }
        }
    </script>
